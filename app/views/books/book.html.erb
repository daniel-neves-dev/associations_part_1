<section class="font-sans text-base antialiased font-normal leading-default bg-gray-50 text-slate-500">
  <div class="container xl:max-w-screen-lg mx-auto px-4">
    <p class="text-green-500"><%= notice %></p>

    <button type="button" class="button-green mt-4 mb-6">...</button>

    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-2">
      <% @books.each do |book| %>
        <div class="mb-6 drop-zone transition ...">
          <div class="relative flex flex-col min-w-0 ...">
            <div class="relative">
              ...
            </div>
            <div class="flex-auto px-1 pt-4">
              <div>
                <strong>By:</strong>
                <h5 class="text-3xl text-blue-500"><%= book.author.name %></h5>
              </div>

              <div>
                <strong>Publish at:</strong>
                <%= book.publish_at %>
              </div>

              <div class="mt-4">
                <%= book.description %>
              </div>

              <div class="flex space-x-4 mt-12">
                <div>
                  <button class="button-yellow mt-4 mb-6">Edit</button>
                </div>
                <div>
                  <div class="button-red mt-4 mb-6">Delete</div>
                </div>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</section>
