<section class="m-0 font-sans text-base antialiased font-normal leading-default bg-gray-50 text-slate-500">
  <div class="container xl:max-w-screen-lg h-auto mx-auto px-4">
    <p style="color: green"><%= notice %></p>

    <button type="button" class="text-white mt-4 mb-6 bg-green-500 hover:bg-green-600 focus:ring-4 focus:outline-none focus:ring-[#24292F]/50 font-medium rounded-lg text-sm px-5 py-2.5 text-center inline-flex items-center
                        transition ease-in-out delay-0 hover:-translate-y-1 hover:scale-110  duration-300 mr-2">
      <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-4 h-4 mr-2">
        <path stroke-linecap="round" stroke-linejoin="round" d="M15.666 3.888A2.25 2.25 0 0013.5 2.25h-3c-1.03 0-1.9.693-2.166 1.638m7.332 0c.055.194.084.4.084.612v0a.75.75 0 01-.75.75H9a.75.75 0 01-.75-.75v0c0-.212.03-.418.084-.612m7.332 0c.646.049 1.288.11 1.927.184 1.1.128 1.907 1.077 1.907 2.185V19.5a2.25 2.25 0 01-2.25 2.25H6.75A2.25 2.25 0 014.5 19.5V6.257c0-1.108.806-2.057 1.907-2.185a48.208 48.208 0 011.927-.184" />
      </svg>
      <%= link_to "New book", new_book_path %>
    </button>

    <div class="grid grid-cols-3 gap-2">
      <% @books.each do |book| %>
        <div class="w-full max-w-full px-3 mb-6 lg:w-5/2 sm:flex-none drop-zone transition ease-in-out delay-75 hover:-translate-y-1 hover:scale-110  duration-300">
          <div class="relative flex flex-col min-w-0 break-words bg-white border-0 shadow-soft-xl px-3 py-3 rounded-2xl bg-clip-border">
            <div class="relative">
              <div class="text-2xl"><%= book.title %></div>
              <a class="block shadow-xl rounded-2xl mt-2">
                <%= link_to image_tag(book.image_resize, class: 'rounded-md'), book.image if book.image.attached? %>
              </a>
            </div>
            <div class="flex-auto px-1 pt-4">
              <div> By:
                <h5 class="text-3xl text-blue-500"><%= book.author.name %></h5>
              </div>

              <div>
                <strong>Publish at:</strong>
                <%= book.publish_at %>
              </div>

              <div class="mt-4">
                <%= book.description %>
              </div>

              <div class="flex space-x-4 mt-12">
                <div>
                  <button type="button" class="text-white mt-4 mb-6 bg-yellow-500 hover:bg-yellow-600 focus:ring-4 focus:outline-none focus:ring-[#24292F]/50 font-medium rounded-lg text-sm px-5 py-2.5 text-center inline-flex items-center  mr-2">
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-4 h-4 mr-2">
                      <path stroke-linecap="round" stroke-linejoin="round" d="M16.862 4.487l1.687-1.688a1.875 1.875 0 112.652 2.652L10.582 16.07a4.5 4.5 0 01-1.897 1.13L6 18l.8-2.685a4.5 4.5 0 011.13-1.897l8.932-8.931zm0 0L19.5 7.125M18 14v4.75A2.25 2.25 0 0115.75 21H5.25A2.25 2.25 0 013 18.75V8.25A2.25 2.25 0 015.25 6H10"/>
                    </svg>
                    <%= link_to "Edit", edit_book_path(book) %>
                  </button>
                </div>
                <div>
                  <div class="text-white mt-4 mb-6 bg-red-500 hover:bg-red-600 focus:ring-4 focus:outline-none focus:ring-[#24292F]/50 font-medium rounded-lg text-sm px-5 py-2.5 text-center inline-flex items-center mr-2">
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-4 h-4 mr-2">
                      <path stroke-linecap="round" stroke-linejoin="round" d="M14.74 9l-.346 9m-4.788 0L9.26 9m9.968-3.21c.342.052.682.107 1.022.166m-1.022-.165L18.16 19.673a2.25 2.25 0 01-2.244 2.077H8.084a2.25 2.25 0 01-2.244-2.077L4.772 5.79m14.456 0a48.108 48.108 0 00-3.478-.397m-12 .562c.34-.059.68-.114 1.022-.165m0 0a48.11 48.11 0 013.478-.397m7.5 0v-.916c0-1.18-.91-2.164-2.09-2.201a51.964 51.964 0 00-3.32 0c-1.18.037-2.09 1.022-2.09 2.201v.916m7.5 0a48.667 48.667 0 00-7.5 0"/>
                    </svg>
                    <%= button_to "Delete", book, method: :delete,form:{ data: { turbo_confirm: "Are you sure?" }} %>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</section>