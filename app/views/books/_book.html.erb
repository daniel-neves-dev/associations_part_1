<div id="<%= dom_id(book) %>" class="bg-white rounded-lg shadow-md p-4 mb-4">
  <p class="mb-2">
    <strong class="text-blue-600">Title:</strong>
    <%= book.title %>
  </p>

  <p class="mb-2">
    <strong class="text-blue-600">Author:</strong>
    <%= book.author.name %>
  </p>

  <p class="mb-2">
    <strong class="text-blue-600">Publish at:</strong>
    <%= book.publish_at %>
  </p>

  <p class="mb-2">
    <strong class="text-blue-600">Description:</strong>
    <%= book.description %>
  </p>

  <% if book.image.content_type.in?(%w[image/jpeg image/png]) %>
    <div class="mt-2">
      <%= link_to image_tag(book.image_resize, class: 'max-w-full h-auto'), book.image if book.image.attached? %>
    </div>
  <% end %>
</div>
